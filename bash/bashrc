export PS1="\\033[1;32m\u\\033[0m@\h(\j)\\033[1;32m\W\\033[0m\$ "
alias ls="ls -GahA"

if [ -f /opt/local/etc/bash_completion ]; then
    . /opt/local/etc/bash_completion
fi

